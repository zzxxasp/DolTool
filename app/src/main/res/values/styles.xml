<resources>
	<style name="AppTheme" parent="AppTheme.Base"/>
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorAccent">@color/Blue_SP</item>
        <item name="colorPrimary">@color/Blue_SP</item>
        <item name="colorPrimaryDark">@color/blue_dark</item>
        <item name="colorControlNormal">@color/White</item>
        <item name="colorControlHighlight">@color/blue_dark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/Animation.Activity.Translucent.Style</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="actionBarItemBackground">@drawable/theme_blue_btn</item>
        <item name="homeAsUpIndicator">@drawable/ic_arrow_back_white_24dp</item>
        <item name="drawerArrowStyle">@style/AppTheme.DrawerArrowToggle</item>
        <item name="actionModeCloseDrawable">@drawable/ic_check_white_24dp</item>
        <item name="actionModeCloseButtonStyle">@style/AppTheme.ActionMode</item>
        <item name="actionOverflowButtonStyle">@style/ActionBarOverflowStyle</item>
        <item name="actionModeBackground">@color/Blue_SP</item>
        <item name="toolbarNavigationButtonStyle">@style/AppTheme.Toolbar.Navigation</item>
    </style>
    <style name="AppTheme.Base.FullScreen" parent="AppTheme.Base">
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="CircularProgressBar">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="stroke_width">5dp</item>
        <item name="progress" format="float">0.1</item>
        <item name="progress_color">#ffff4444</item>
        <item name="progress_background_color">@android:color/background_light</item>
        <item name="marker_visible">true</item>
        <item name="thumb_visible">true</item>
    </style>
    <style name="CircularProgressBarLight">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="stroke_width">5dp</item>
        <item name="progress" format="float">0.1</item>
        <item name="progress_color">#ffff4444</item>
        <item name="progress_background_color">@android:color/darker_gray</item>
        <item name="marker_visible">true</item>
        <item name="thumb_visible">true</item>
    </style>
    <!-- Application theme. -->

	<style name="updateDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
	<style name="update_dialog" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/dialog_update_enter</item>
        <item name="@android:windowExitAnimation">@anim/dialog_update_exit</item>
    </style>	
	<style name="dialog_up" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="@android:windowExitAnimation">@anim/dialog_exit</item>
    </style>
	
    <style name="Theme.SmoothProgressBarDefaults" parent="AppTheme">
        <item name="cpbStyle">@style/CircularProgressBar</item>
    </style>

    <style name="CircularProgressBarLoading" parent="android:Widget.ProgressBar">
        <item name="cpb_color">@color/cpb_default_color</item>
        <item name="cpb_stroke_width">@dimen/cpb_default_stroke_width</item>
        <item name="cpb_min_sweep_angle">@integer/cpb_default_min_sweep_angle</item>
        <item name="cpb_max_sweep_angle">@integer/cpb_default_max_sweep_angle</item>
        <item name="cpb_sweep_speed">@string/cpb_default_sweep_speed</item>
        <item name="cpb_rotation_speed">@string/cpb_default_rotation_speed</item>
    </style>
    <style name="ActionBarOverflowStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_more_vert_white</item>
        <item name="background">@drawable/theme_blue_btn</item>
    </style>
    <style name="AppTheme.Toolbar.Navigation" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:background">@drawable/theme_blue_btn</item>
    </style>
    <style name="AppTheme.ActionMode" parent="Widget.AppCompat.ActionButton.CloseMode">
        <item name="android:background">@drawable/theme_blue_btn</item>
    </style>
    <style name="AppTheme.DrawerArrowToggle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/white</item>
    </style>
    <style name="Animation.Activity.Translucent.Style" parent="@android:style/Animation.Translucent">
        <item name="android:windowEnterAnimation">@anim/activity_transition_slide_in_new</item>
        <item name="android:windowExitAnimation">@anim/activity_transition_slide_out_new</item>
    </style>
</resources>