<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:f="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@null"
	>
<!--TitleBar-->
<include
    layout="@layout/system_actionbar_black"   
/>
<!--Content-->
<ScrollView
    android:id="@+id/content_s" 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:background="@null"
    >
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
	android:orientation="horizontal"
	android:background="@color/GhostWhite"    
    >
<TextView
    android:id="@+id/null_txt" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:textColor="@color/Black_SP"
    android:textSize="14sp"
 	android:visibility="gone"
    android:text="没有查询到相关任务"        
	/>
<LinearLayout
    android:id="@+id/content"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/GhostWhite"
    android:orientation="vertical"
	android:layout_marginBottom="5dp"
    >
    <!--Title-->
    <RelativeLayout
		android:id="@+id/title"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:background="@color/Black_SP"
		android:layout_margin="5dp"
		>
		<ImageView
		    android:id="@+id/pic" 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="5dp"
			android:src="@drawable/dol_b0s1"
			android:layout_centerVertical="true"
			android:contentDescription="@null"
		    />
   		<TextView 
			android:id="@+id/name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@null"
			android:padding="5dp"
			android:textColor="@color/White"
			android:textSize="16sp"
			android:layout_centerVertical="true"
			android:layout_toRightOf="@+id/pic"
			android:text=""		    
   		/>
		<TextView 
			android:id="@+id/sp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:layout_margin="5dp"
			android:background="@drawable/theme_blue_btn_rate"
			android:layout_centerVertical="true"
			android:layout_alignParentRight="true"
			android:textColor="@color/White"
			android:textSize="12sp"
			android:text=""
   			/>     
    </RelativeLayout>
	<LinearLayout
	    android:id="@+id/tag_area" 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:baselineAligned="false"
		android:weightSum="2"
	    >
	<LinearLayout 
		android:layout_width="0dp"
		android:padding="5dp"
		android:layout_height="wrap_content"
		android:layout_margin="5dp"
		android:layout_weight="1"
		android:gravity="center"
		android:background="@color/Black_SP"
	    >
	<ImageView
	    android:contentDescription="@null" 
        android:id="@+id/tag_number" 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:src="@drawable/trade_1"	    
	    />
	<TextView
	    android:id="@+id/number_txt"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
	    android:textColor="@color/White"
	    android:layout_margin="5dp"
	    android:text="第一类" 
	    />
	</LinearLayout>
	<LinearLayout 
		android:layout_width="0dp"
		android:padding="5dp"
		android:layout_margin="5dp"
		android:layout_height="match_parent"
		android:layout_weight="1"
		android:gravity="center"
		android:background="@color/Black_SP"
	    >
	<ImageView
		android:contentDescription="@null"
        android:id="@+id/tag_type" 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:src="@drawable/trade_food"  
	    />
	<TextView
	    android:id="@+id/type_txt"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
	    android:textColor="@color/White"
	    android:layout_margin="5dp"
	    android:text="食品" 
	    />
	</LinearLayout>
	</LinearLayout>
    <!--Details-->
    <RelativeLayout 
		android:id="@+id/details"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:background="@color/Black_SP"
		android:layout_margin="5dp"        
        >
    <TextView
        android:id="@+id/main_txt" 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textColor="@color/White"
		android:padding="5dp"
		android:text="将鱼腌制或晒干后制成的易于保存的食品."        
        />    
    </RelativeLayout>
    <TextView
        android:id="@+id/city_txt" 
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textColor="@color/White"
		android:background="@color/Blue_SP"
		android:padding="5dp"
		android:gravity="center"
		android:text="港口购买"
		android:layout_marginLeft="5dp"
		android:layout_marginRight="5dp"        
        />
    <com.key.doltool.view.FlowLayout
        android:id="@+id/city_array"
    	f:horizontalSpacing="3dip"
    	f:verticalSpacing="6dip"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:layout_marginLeft="5dp"
		android:layout_marginRight="5dp"
		android:background="@color/Black_SP">  
	</com.key.doltool.view.FlowLayout>
</LinearLayout>
</LinearLayout>
</ScrollView>
</LinearLayout>
