<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
	xmlns:android="http://schemas.android.com/apk/res/android" 
	android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null"
    >
<RelativeLayout
    android:id="@id/main" 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:padding="5dp"
    android:background="@drawable/bg_content_card"
    >
<TextView
    android:id="@+id/name" 
    android:layout_width="match_parent"
    android:padding="5dp"
    android:layout_margin="5dp"
    android:background="@color/Blue_SP"
    android:layout_height="wrap_content"
    android:textColor="@color/White"
    android:text=""    
    />
<LinearLayout
	android:id="@+id/skill" 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/name"
    android:padding="1dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="5dp"  
    >
<RelativeLayout
    android:id="@+id/skill_1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@null"
    >
<TextView
    android:id="@+id/skill_tag" 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="2dp"
    android:textColor="@color/Black_SP"
    android:text="技能:"    
    />
<ImageView
    android:contentDescription="@null"
    android:layout_toRightOf="@+id/skill_tag"
    android:id="@+id/skill1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
	android:padding="2dp"
    android:src="@drawable/trade_food"    
    />
<TextView
    android:id="@+id/skill1_name" 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@+id/skill1"
    android:padding="2dp"
    android:textColor="@color/Black_SP"
    android:text="食品买卖"    
    />
<TextView
    android:id="@+id/skill1_number" 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@+id/skill1_name"
    android:padding="2dp"
    android:textColor="@color/Black_SP"
    android:text="5"    
    />
<ImageView
    android:contentDescription="@null"
    android:id="@+id/skill2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_toRightOf="@+id/skill1_number"
	android:padding="2dp"
    android:src="@drawable/trade_food"    
    />
<TextView
    android:id="@+id/skill2_name" 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@+id/skill2"
    android:padding="2dp"
    android:textColor="@color/Black_SP"
    android:text="食品买卖"    
    />
<TextView
    android:id="@+id/skill2_number" 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@+id/skill2_name"
    android:padding="2dp"
    android:textColor="@color/Black_SP"
    android:text="55"    
    />    
</RelativeLayout>
</LinearLayout>
<View
    android:id="@+id/line" 
	android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:layout_below="@+id/skill"
	android:layout_marginLeft="5dp"
	android:layout_marginRight="5dp"
    android:background="@color/SlateGray" 
    />
<!--Line：3-->
<RelativeLayout 
	android:layout_below="@+id/line"
	android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp"    
    >
<HorizontalScrollView
	android:id="@+id/need" 
	android:scrollbars="none"
	android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    >
<LinearLayout
	android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
	android:layout_marginLeft="5dp"
    >
<TextView
	android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@color/Black_SP"
    android:padding="2dp"
    android:text="需求:"
    />
<RelativeLayout
    android:id="@+id/item_1" 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@null"
	>
<ImageView
    android:contentDescription="@null"
    android:id="@+id/img1"
	android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
    android:src="@drawable/item_defalut" 
    android:padding="5dp"
    />
<TextView
    android:id="@+id/txt1" 
	android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@color/White"
    android:layout_alignBottom="@+id/img1"
    android:layout_alignRight="@+id/img1"
    android:textSize="14sp"
    android:text="5"
    android:paddingLeft="7dp" 
    android:paddingBottom="5dp"
    android:paddingRight="7dp" 
    />
<TextView
    android:id="@+id/name1" 
	android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@color/Black_SP"
    android:layout_centerVertical="true"
    android:layout_toRightOf="@+id/img1"
    android:textSize="12sp"
    android:text="鳄鱼肉"
    />
</RelativeLayout>
<RelativeLayout
    android:id="@+id/item_2" 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@null"
    android:orientation="vertical" >
<ImageView
    android:contentDescription="@null"
    android:id="@+id/img2"
	android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
    android:src="@drawable/item_defalut"
    android:padding="5dp"
    />
<TextView
    android:id="@+id/txt2"
	android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@color/White"
    android:typeface="sans"
    android:layout_alignBottom="@+id/img2"
    android:layout_alignRight="@+id/img2"
    android:textSize="12sp"
    android:text=""
    android:padding="7dp"    
    />
<TextView
    android:id="@+id/name2" 
	android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@color/Black_SP"
    android:layout_centerVertical="true"
    android:layout_toRightOf="@+id/img2"
    android:textSize="12sp"
    android:text="后膛装填式射击枪"
    />
</RelativeLayout>
<RelativeLayout
    android:id="@+id/item_3" 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@null"
    android:orientation="vertical" >
<ImageView
    android:contentDescription="@null"
    android:id="@+id/img3"
	android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
    android:src="@drawable/item_defalut"
    android:padding="5dp"
    />
<TextView
    android:id="@+id/txt3" 
	android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@color/White"
    android:typeface="sans"
    android:layout_alignBottom="@+id/img3"
    android:layout_alignRight="@+id/img3"
    android:textSize="12sp"
    android:text=""
    android:padding="7dp"    
    />
<TextView
    android:id="@+id/name3" 
	android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@color/Black_SP"
    android:layout_centerVertical="true"
    android:layout_toRightOf="@+id/img3"
    android:textSize="12sp"
    android:text="鳄鱼肉"
    />
</RelativeLayout>
</LinearLayout>
</HorizontalScrollView>
<View
    android:id="@+id/line2" 
	android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:layout_below="@+id/need"
	android:layout_marginLeft="5dp"
	android:layout_marginRight="5dp"
    android:background="@color/SlateGray" 
    />
<RelativeLayout
    android:id="@+id/result" 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_below="@+id/line2"
    android:background="@null"
    android:layout_marginLeft="5dp"
    android:gravity="center_vertical"   
    >
<TextView
    android:id="@+id/tag" 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="2dp"
    android:layout_centerVertical="true"
    android:textColor="@color/Black_SP"
    android:text="生产:"
    />
<ImageView
    android:contentDescription="@null"
    android:id="@+id/result_pic"
    android:layout_toRightOf="@+id/tag"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
	android:padding="5dp"
    android:src="@drawable/item_defalut"    
    />
<TextView
    android:id="@+id/result_name" 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@+id/result_pic"
    android:padding="2dp"
    android:textSize="12sp"
    android:layout_centerVertical="true"
    android:textColor="@color/Black_SP"
    android:text=""
    />
<TextView
    android:id="@+id/result_number" 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@+id/result_name"
    android:padding="2dp"
    android:textSize="12sp"
    android:layout_centerVertical="true"
    android:textColor="@color/Black_SP"
    android:text=""
    />    
</RelativeLayout>
</RelativeLayout>
</RelativeLayout>
</LinearLayout>