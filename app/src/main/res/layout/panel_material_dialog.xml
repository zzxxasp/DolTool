<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:flatui="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="32dp"
    android:layout_gravity="center"
    android:background="@null"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/material_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/material_card"
        android:orientation="vertical">
	<RelativeLayout 
		android:id="@+id/btn_layout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"               
		>
        <LinearLayout
            android:id="@+id/contentView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:textColor="#DE000000"
                android:textSize="24sp"
                android:id="@+id/title"
                android:text="标题"
                android:paddingLeft="24dp"
                android:paddingTop="24dp"
                android:paddingRight="24dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"/>
			
            <TextView
                android:id="@+id/message"
                android:textColor="#8a000000"
                android:maxHeight="300dp"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:paddingBottom="22dp"
                android:paddingTop="22dp"
                android:textSize="16sp"
                android:lineSpacingMultiplier="1.3"
                android:text="确认是否要退出程序?"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                />
			</LinearLayout>
			<LinearLayout
				android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
				android:layout_alignParentRight="true"
				android:layout_margin="5dp"
			    android:id="@+id/btn_bar"
				android:layout_below="@+id/contentView"
			    >
			<com.key.doltool.view.flat.FlatButton
			    flatui:fl_theme="@array/sea"
			    flatui:fl_cornerRadius="3dp"
			    flatui:fl_borderWidth="0.5dp"
			    flatui:fl_touchEffect="fl_ripple"
    			flatui:fl_blockButtonEffectHeight="2dp"
			    android:id="@+id/confrim"
            	android:padding="5dp"
				android:layout_margin="5dp"
            	android:textColor="@color/White"
            	android:text="确认"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	/>
			<com.key.doltool.view.flat.FlatButton
			    android:id="@+id/cancel"
			    flatui:fl_theme="@array/flat"
				flatui:fl_cornerRadius="3dp"
			    flatui:fl_borderWidth="0.5dp"
			    flatui:fl_touchEffect="fl_ripple"
    			flatui:fl_blockButtonEffectHeight="2dp"
            	android:padding="5dp"
				android:layout_margin="5dp"
            	android:textColor="@color/Black_SP"
            	android:text="取消"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	/>
			</LinearLayout>
            </RelativeLayout>
    </LinearLayout>
</LinearLayout>
